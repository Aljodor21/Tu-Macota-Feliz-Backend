<body class="bg-general">

    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>{{success}}</strong>

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}
    <!--Gestion del servicio-->
    
    <div class="container rounded shadow w-75  bg-primary mt-5 mb-5" >
        <div class="row align-items-stretch "style="height: 50vh;">
            <div class="col col-md-5 col-lg-5 col-xl-6 bg-gestion d-none d-lg-block rounded">

            </div>
            <div class="col bg-white text-center p-5 rounded-end">
                <div class="text-end">
                    <a href="/">
                        <img src="/images/HORIZONTAL.png" alt="Logo principal" width="80px">
                    </a>
                </div>
                <h2 class="fw-bold text-center py-3">Gestion de servicios</h2>

                <ul class="list-group list-group-flush">
                    {{#each services}}
                        <a class="list-group-item" href="/gestion/services/{{id}}/gest/{{ide}}" >{{service}}</a>

                    {{/each}}
                    
                </ul>
                
            </div>

            

        </div>
    </div>


    <!--Script Necesario-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>